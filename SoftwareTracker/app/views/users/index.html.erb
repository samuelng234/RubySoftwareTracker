<h1>Users</h1>
<%= link_to "New User", new_user_path %>

<%= form_with url: users_path, method: :get do |form| %>
  <%= form.text_field :search_text, value: params[:search_text], placeholder: 'Enter search term...' %>
  <%= form.submit "Search" %>
<% end %>

<ul>
<% unless @users.nil? %>
  <% @users.each do |user| %>
    <li>
      <%= link_to "#{user.firstname} #{user.lastname}", user %>
    </li>
  <% end %>
<% end %>
</ul>